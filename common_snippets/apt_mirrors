ARG USE_APT_MIRRORS
ENV USE_APT_MIRRORS=$USE_APT_MIRRORS
RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    if [ "$USE_APT_MIRRORS" = "1" ]; then \
        find /etc/apt/sources.list /etc/apt/sources.list.d/ -type f -print0 | while IFS= read -r -d '' file; do \
            sed -i "s|http://archive.ubuntu.com/ubuntu|http://de.archive.ubuntu.com/ubuntu|g" "$file"; \
            sed -i "s|http://ports.ubuntu.com/ubuntu-ports|http://ftp.tu-dortmund.de/ubuntu-ports|g" "$file"; \
            sed -i "s|http://security.ubuntu.com/ubuntu|http://ftp.halifax.rwth-aachen.de/ubuntu|g" "$file"; \
            sed -i "s|http://deb.debian.org/debian-security|http://security.debian.org/debian-security|g" "$file"; \
            sed -i "s|http://deb.debian.org/debian|http://ftp.halifax.rwth-aachen.de/debian|g" "$file"; \
        done; \
    fi
RUN apt-get update
RUN apt-get install -y --reinstall ubuntu-keyring || apt-get install -y --reinstall debian-archive-keyring