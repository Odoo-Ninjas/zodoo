ARG APT_PROXY_IP
ARG APT_OPTIONS

ENV DEBIAN_FRONTEND=noninteractive

ENV APT_OPTIONS="$APT_OPTIONS  -o Acquire::http::proxy::apt.postgresql.org=DIRECT -o Acquire::http::proxy::download.docker.com=DIRECT  -o Acquire::https::Proxy::ppa.launchpadcontent.net=DIRECT"
ENV APT_PROXY_IP="${APT_PROXY_IP}"

RUN if [ "$APT_PROXY_IP" != "ignore" ]; then \
    echo "Acquire::http::Proxy \"http://${APT_PROXY_IP}:3142\";" > /etc/apt/apt.conf.d/01proxy; \
fi
RUN apt-get $APT_OPTIONS update
